<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <script
      src="https://kit.fontawesome.com/3947aef1e2.js"
      crossorigin="anonymous"
    ></script>
    <title>Edit your Landmark</title>
    <link rel="stylesheet" href="/stylesheets/formLandmark.css" />
  </head>
  <body>
    <%- include('navbar') %>
    <div class="container">
      <div class="row">
        <div
          class="d-flex align-items-center justify-content-center mt-3 text-form col-12"
        ></div>
      </div>
      <form
        action="/landmark/formRegisterLandmark/:province_id"
        method="POST"
        enctype="multipart/form-data"
      >
        <h2>Add a new Landmark name</h2>
        <label for="landmark_name">Name:</label>
        <input
          class="landmark_name"
          type="text"
          id="landmark_name"
          name="landmark_name"
        /><br /><br />

        <label for="street">Street:</label>
        <input
          class="landmark_street"
          type="text"
          id="street"
          name="landmark_street"
        /><br /><br />

        <label for="img">Image:</label>
        <input type="file" id="img" name="img" /><br /><br />
        <div class="d-flex flex-column">
          <select class="selector" name="province_id" id="provinceSelector">
            <% resultAllProvinces.forEach(province => { %>
            <option value="<%= province.province_id %>">
              <%= province.province_name %>
            </option>
            <% }) %>
          </select>
          <div class="d-flex align-items-center">
            <input class="submit" type="submit" value="Add landmark" />
          </div>
        </div>
      </form>
    </div>
    <%- include('footer') %>
 
